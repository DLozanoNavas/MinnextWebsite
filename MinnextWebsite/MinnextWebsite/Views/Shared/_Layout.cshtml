@{ //Body
    var body = "";
    //MainBox
    var mainBox = false;
    //Content
    var switch_on = ViewData["Header"];
    if (switch_on == null)
    {
        switch_on = "Index";
    }
    switch (switch_on)
    {
        case "Index":
            body = "index-page";
            break;
        case "About":
            body = "about-us";
            break;
        case "Log in":
            body = "login";
            break;
        case "Register":
            body = "register";
            break;
        default:
            body = "off-canvas-sidebar";
            break;
    }
    if (String.Equals(switch_on, "Index") || String.Equals(switch_on, "About"))
    {
        body += " sidebar-collapse";
        mainBox = true;
    }
    if (body == null)
    {
        body = "index-page";
    }
}
<!DOCTYPE html>
<html>
<head>
    <!-- MetaTags -->
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" href="favicon.png">
    <link rel="icon" type="image/png" href="favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <!--Title-->
    <title>@ViewData["Title"] - Minnext</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <!-- CSS Files -->
    <link href="~/css/material-kit.min.css?v=2.1.0" rel="stylesheet" />
    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link href="~/css/materialKitDemo.css" rel="stylesheet" />
    <link href="~/css/vertical-nav.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    @if (mainBox == false)
    {
        <style>
            .info {
                padding: 0;
            }
        </style>
    }
</head>
<body class="@body">

    <nav class="navbar navbar-color-on-scroll fixed-top navbar-expand-lg" color-on-scroll="100" id="sectionsNav">

        <div class="container">
            <div class="navbar-translate">
                <a asp-area="" asp-controller="Home" asp-action="" class="navbar-brand">
                    Minnext
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="navbar-toggler-icon"></span>
                    <span class="navbar-toggler-icon"></span>
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>

            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ml-auto">
                    <!--Explore-->
                    <li class="dropdown nav-item">
                        <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown" aria-expanded="false">
                            <i class="material-icons">explore</i> Descubrir
                            <div class="ripple-container"></div>
                        </a>
                        <div class="dropdown-menu dropdown-with-icons">
                            <a asp-area="" asp-controller="Home" asp-action="About" class="dropdown-item">
                                <i class="material-icons">account_balance</i> About Us
                            </a>
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="dropdown-item">
                                <i class="material-icons">document</i> Documentation
                            </a>
                        </div>
                    </li>
                    <!--Login-->
                    <partial name="_LoginPartial" />
                </ul>
            </div>
        </div>
    </nav>
    @if (mainBox == true)
    {
        @if (switch_on.Equals("About"))
        {
            <div class="page-header header-filter header-small" data-parallax="true" style="background-image: url(../images/Background/@ViewData["Background"]); transform: translate3d(0px, 0px, 0px);">
                <div class="container">
                    <div class="row">
                        <div class="col-md-8 ml-auto mr-auto text-center">
                            <h1 class="title">About Us</h1>
                            <h4>Meet the amazing team behind this project and find out more about how we work.</h4>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="page-header header-filter clear-filter" data-parallax="true" style="background-image: url(../images/Background/@ViewData["Background"]); transform: translate3d(0px, 0px, 0px);">
                <div class="container">
                    <div class="row">
                        <div class="col-md-8 ml-auto mr-auto">
                            <div class="brand">
                                <h1>
                                    Minnext
                                    <span class="pro-badge">Blockchain</span>
                                </h1>

                                <h3 class="title">La mejor solución para la seguridad de los mineros</h3>
                            </div>
                        </div>
                        <div class="col-md-10 ml-auto mr-auto">
                            <div class="card card-raised card-form-horizontal">
                                <div class="card-body ">
                                    <form method="post" action="#">
                                        <div class="row">
                                            <div class="col-md-9">
                                                <div class="form-group bmd-form-group">
                                                    <input type="text" value="" placeholder="Busca toda la documentación e información de Minnext vinculada con Blockchain" class="form-control">
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <button type="button" class="btn btn-primary btn-block"><i class="material-icons">search</i> Buscar</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        <!-- Content Start -->
        @RenderBody()
        <!--// Content END -->
    }
    @if (mainBox == false)
    {
        @if (switch_on.Equals("Log in"))
        {
            <div class="wrapper wrapper-full-page">
                <div class="page-header @body-page header-filter" filter-color="black" style="background-image: url(../../images/Background/@ViewData["Background"]);">
                    <!-- Content Start -->
                    @RenderBody()
                    <!--// Content END -->
                </div>
            </div>
        }
        else
        {
            <div class="page-header @body-page header-filter" filter-color="black" style="background-image: url(../../images/Background/@ViewData["Background"]);">
                <!-- Content Start -->
                @RenderBody()
                <!--// Content END -->
            </div>
        }
    }
    @if (mainBox == true)
    {
        <!--Email-->
        <div class="subscribe-line subscribe-line-image" style="background-image: url('../../../images/documentation/directorio_activo.png');">
            <div class="container">
                <div class="row">
                    <div class="col-md-10 ml-auto mr-auto">
                        <div class="text-center">
                            <h3 class="title">
                                Conoce nuestra API
                            </h3>
                            <p class="description">
                                Azure Blockchain Workbench REST API es un punto de extensibilidad Workbench que permite a los desarrolladores crear y administrar aplicaciones blockchain, administrar usuarios y organizaciones dentro de un consorcio, integrar aplicaciones blockchain en servicios y plataformas, realizar transacciones en blockchain y recuperar datos transaccionales y contractuales. de un blockchain.
                            </p>
                        </div>
                        <a class="btn  btn-rose   btn-round btn-block" href="https://minnext-54snke-api.azurewebsites.net/swagger/ui/index.html"><i class="material-icons">book</i> Minnext API</a>
                    </div>
                </div>
            </div>
        </div>
        <!--End Email-->
    }
    <div class="section section-gray cd-section" id="footers">
        <div id="footer-areas">
            <partial name="Footer" />
        </div>
    </div>
    <partial name="_CookieConsentPartial" />

    <!--   Core JS Files   -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <!-- Conecta JS -->
    <!--   Core JS Files   -->
    <script src="~/js/core/bootstrap-material-design.min.js" type="text/javascript"></script>

    <script src="~/js/plugins/moment.min.js"></script>

    <!--	Plugin for the Datepicker, full documentation here: https://github.com/Eonasdan/bootstrap-datetimepicker -->
    <script src="~/js/plugins/bootstrap-datetimepicker.js" type="text/javascript"></script>

    <!--  Plugin for the Sliders, full documentation here: http://refreshless.com/nouislider/ -->
    <script src="~/js/plugins/nouislider.min.js" type="text/javascript"></script><!--  Google Maps Plugin  -->
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB2Yno10-YTnLjjn_Vtk0V8cdcY5lC4plU"></script>

    <!--	Plugin for Tags, full documentation here: https://github.com/bootstrap-tagsinput/bootstrap-tagsinputs  -->
    <script src="~/js/plugins/bootstrap-tagsinput.js"></script>
    <!--	Plugin for Select, full documentation here: http://silviomoreto.github.io/bootstrap-select -->
    <script src="~/js/plugins/bootstrap-selectpicker.js" type="text/javascript"></script>

    <!--	Plugin for Fileupload, full documentation here: http://www.jasny.net/bootstrap/javascript/#fileinput -->
    <script src="~/js/plugins/jasny-bootstrap.min.js" type="text/javascript"></script>

    <!--	Plugin for Small Gallery in Product Page -->
    <script src="~/js/plugins/jquery.flexisel.js" type="text/javascript"></script>

    <!-- Plugins for presentation and navigation  -->
    <script src="~/js/modernizr.js" type="text/javascript"></script>
    <script src="~/js/vertical-nav.js" type="text/javascript"></script>

    <!-- Js With initialisations For Demo Purpose, Don't Include it in Your Project -->
    <script src="~/js/materialKitDemo.js" type="text/javascript"></script>

    <!-- Control Center for Material Kit: parallax effects, scripts for the example pages etc -->
    <script src="~/js/material-kit.min.js?v=2.1.0" type="text/javascript"></script>

    <!--	Plugin for All Web -->
    <script src="~/js/site.js" asp-append-version="true"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>
